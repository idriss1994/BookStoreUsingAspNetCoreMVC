@model BookStore.Models.ForgotPasswordModel

@{
    ViewData["Title"] = "ForgotPassword";
}

<div class="container">
    <h2>Reset password</h2>
    <div class="row">
        <div class="col-md-8">
            @if (Model?.EmailSent == true)
            {
               <div class="alert alert-info">
                    <p>If you are a member, we have sent an email on your registred email id.</p>
               </div>
            }
            else
            {
                <form asp-action="ForgotPassword">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Email" class="control-label"></label>
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Submit" class="btn btn-primary" />
                    </div>
                </form>
            }
        </div>
    </div>

    <div>
        <a asp-action="Login" asp-controller="Account">Back to Login</a>
    </div>
</div>

